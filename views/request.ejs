<%- include('partials/header'); -%>


<main>
	<div class="alert alert-success" style="display: <%= stat %>">
    <strong>Success!</strong> Your request has been submitted. You will be reached soon.
  </div>
  
  <div class="container" style="margin-top: 100px;margin-bottom: 100px;">
  	<h1>Patient Blood Request</h1><hr>
  	<form action="/request" method="post">
  <div class="form-group row">
    <label for="name" class="col-sm-2 col-form-label">Patient Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="name" placeholder="Enter name here" name="Name" required>
    </div>
  </div>
  <div class="form-group row">
    <label for="Email" class="col-sm-2 col-form-label">Email (optional)</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="Email" placeholder="Email" name="email">
    </div>
  </div>
  <div class="form-group row">
    <label for="number" class="col-sm-2 col-form-label">Mobile Number</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="number" name="number" placeholder="Mobile number" min="1000000000" max="9999999999" required>
    </div>
  </div>
  
  <fieldset class="form-group">
    <div class="row">
      <div class="form-group">
      <label for="sel1">Blood Group:</label>
      <select class="form-control" id="sel1" name="bloodgroup" required>
        <option>A+</option>
        <option>B+</option>
        <option>O+</option>
        <option>O-</option>
        <option>AB+</option>
        <option>AB-</option>
        <option>A-</option>
        <option>B-</option>
      </select>
      <br>
    </div>
    </div>
  </fieldset>
  <div class="form-group row">
    <div class="col-lg-12">
      <button type="submit" class="btn btn-primary">Request</button>
    </div>
  </div>
</form>

  </div>
</main>


<%- include('partials/footer'); -%>