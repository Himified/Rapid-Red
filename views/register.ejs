<%- include('partials/header'); -%>


<div class="alert alert-success" style="display: <%= stat %>">
    <strong>Success!</strong> This is your id, save it to login: <b><%= id %></b>
  </div>
 
<div class="container" style="margin-bottom: 80px;">
  <main>
    <div class="py-5 text-center">
      <img class="d-block mx-auto mb-4" src="images/blood.jpg" alt="" width="200" height="120">
      <h2>Registeration</h2>
      <p class="lead">Register for your organisation for Rapid Red services here.</p>
    </div>

    <div class="row g-3">
      <div class="col-md-5 col-lg-4 order-md-last">
        <img src="images/doctor.png">
    </div>
      <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Details</h4><hr>
        <form method="post" action="/register">
          <div class="row g-3">
            <div class="col-sm-6">
              <label for="orgName" class="form-label">Blood Bank  Name</label>
              <input type="text" class="form-control" id="orgName" placeholder="Enter Name" name="orgName"  required>
            </div>

            <div class="col-12">
              <label for="email" class="form-label">Blood Bank Email</label>
              <input type="email" class="form-control" id="email" placeholder="you@example.com" name="email"  required>
            </div>

            <div class="col-12">
              <label for="address" class="form-label">Address</label>
              <input type="text" class="form-control" id="address" placeholder="1234 Main St" name="address"  required>
            </div>

            <div class="col-md-5">
              <label for="country" class="form-label">Country</label>
              <select class="form-select" id="country" name="country"  required>
                <option>Choose...</option>
                <option value="India">India</option>
              </select>
            </div>

            <div class="col-md-4">
              <label for="state" class="form-label">State</label>
              <select class="form-select" id="state" name="state"  required>
                <option >Choose...</option>
                <option value="Gujarat">Gujarat</option>
                <option disabled>Rajasthan</option>
                <option disabled>Goa</option>
              </select>
            </div>

            <div class="col-md-3">
              <label for="zip" class="form-label">Pin</label>
              <input type="number" class="form-control" id="zip" placeholder="Pincode" min="100000" max="999999" name="pincode" required>
            </div>
          </div>

          <hr class="my-4">

          <p>Thankyou for registering with us. We assure you great services.</p>

          <hr class="my-4">
          <button class="w-100 btn btn-primary btn-lg" type="submit">Register</button>
          <hr class="my-4">
        </form>
      </div>
    </div>
  </main>
</div>


  <script src="/docs/5.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

  <script src="form-validation.js"></script>


<%- include('partials/footer'); -%>